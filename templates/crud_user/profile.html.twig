{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	
	<section class='backProfile'>
        <h1 class='text-center py-4'>PROFILE</h1>
		<div class='row py-5 divProfile'>
			<div class='col-md-6 text-center'>
				{% if user.genre.genre %}
					<img class="w-50 avatarProfile" src="{{ asset('assets/img/' ~ user.genre.genre ~ '.avif') }}"/>
				{% else %}
					<img class="imageAvatar" src="{{ asset('assets/img/iconprofile.svg') }}"/>
				{% endif %}

			</div>
			<div class='col-md-6 text-center '>
				<h3>{{ user.nom|upper }}</h3>
				<hr class='hrProfile mx-5'>
				<h3>{{ user.prenom|capitalize }}</h3>
				<hr class='hrProfile mx-5'>
				<h3>
					<svg class='svgGenre' width="80" height="80" viewbox="0 0 90 90" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
						<rect width="80" height="80" fill="url(#pattern0_102_3)"/>
						<defs>
							<pattern id="pattern0_102_3" patterncontentunits="objectBoundingBox" width="1" height="1">
								<use xlink:href="#image0_102_3" transform="matrix(-0.0111111 0 0 -0.0111111 1 1)"/>
							</pattern>
							<image id="image0_102_3" width="80" height="80" xlink:href="data:image/png;base64,"/>
						</defs>
					</svg>
					
					{{ user.genre.genre }}
                </h3>
			</div>
		</div>
		<hr class='hrProfile'>
		<div class='text-center'>
			<div class='d-flex justify-content-center  align-items-center'>
				<a class='text-center' href="{{ path('app_home')}}">
					<img class="h-75 " src="{{ asset('assets/img/email.png') }}">
				</a>
				<h1 class='m-3'>{{ user.email }}</h1>
			</div>
		</div>
		<div class="text-center row py-5">

			<div class='col-6'>
				<button class='btn w-75'>
					<a class='modifier' href="{{ path('app_crud_user_edit', {'id': user.id}) }}">Modifier</a>
				</button>
			</div>
			<div class='col-6'>
				{{ include('crud_user/_delete_form.html.twig') }}
			</div>
		</div>
	</section>
{% endblock %}
